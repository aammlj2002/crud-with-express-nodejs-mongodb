<%- include("./partials/header.ejs") %>
    <%- include("./partials/nav.ejs") %>
        <div class="container">
            <h4>Item</h4>
            <div>
                <h5>
                    Name - <%= item.name %>
                </h5>
                <p>Price - &dollar;<%= item.price %>
                </p>
                <a id="deleteBtn" class="btn" data-id="<%=item._id%>" href="">Delete</a>
            </div>
        </div>
        <script>
            deleteBtn.onclick = function (e) {
                e.preventDefault();
                const id = deleteBtn.dataset.id;
                const endpoint = `/items/${id}`;
                fetch(endpoint, { method: "Delete" })
                    .then((res) => {
                        return res.json()
                    }).then((data) => {
                        window.location.href = data.redirect
                    }).catch((err) => {
                        console.log(err)
                    })
            }
        </script>
        <%- include("./partials/footer.ejs") %>